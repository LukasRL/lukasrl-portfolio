---
import { portfolioData } from '../../data/portfolio';
---

<section id="education" class="py-24 px-4 border-t-2 bg-[#292c3c] border-[#414559]">
  <div class="max-w-4xl mx-auto">
    <div class="text-left mb-12">
      <h2 class="text-3xl font-bold flex items-center gap-3 text-[#c6d0f5]">
        <svg class="w-8 h-8 text-[#ea999c]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
        </svg>
        Educación & Certificaciones
      </h2>
    </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Educación - 50% -->
        <div>
          <h3 class="text-xl font-semibold text-[#c6d0f5] mb-6 flex items-center gap-2">
            <svg class="w-5 h-5 text-[#ea999c]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
            </svg>
            Formación Académica
          </h3>
          <div class="space-y-4">
            {portfolioData.education.map((edu) => (
              <div class="flex items-start gap-3">
                <div class="w-2 h-2 rounded-full mt-2 shrink-0 bg-[#a6e3a1]"></div>
                <div>
                  <h4 class="font-medium text-lg text-[#c6d0f5]">
                    {edu.degree}
                  </h4>
                  <p class="text-sm text-[#a5adce]">
                    {edu.institution} • {edu.year}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Certificaciones - 50% -->
        <div>
          <h3 class="text-xl font-semibold text-[#c6d0f5] mb-6 flex items-center gap-2">
            <svg class="w-5 h-5 text-[#ea999c]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
            Certificaciones & Cursos
          </h3>
          <div class="grid md:grid-cols-2 gap-4">
            {portfolioData.certifications.map((cert) => {
              const [title, entity, year] = cert.split(" - ");
              return (
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 rounded-full mt-2 shrink-0 bg-[#a6e3a1]"></div>
                  <div>
                    <h4 class="font-medium text-lg text-[#c6d0f5]">
                      {title}
                    </h4>
                    <p class="text-sm text-[#a5adce]">
                      {entity} • {year}
                    </p>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
