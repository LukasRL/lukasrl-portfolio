---
import { portfolioData } from '../../data/portfolio';
import CategoryIcon from '../ui/CategoryIcon.astro';
import TechIcon from '../ui/TechIcon.astro';
---

<section id="skills" class="py-24 px-4 border-t-2 bg-[#292c3c] border-[#414559]">
  <div class="max-w-4xl mx-auto">
    <div class="text-left mb-12">
      <h2 class="text-3xl font-bold flex items-center gap-3 text-[#c6d0f5]">
        <svg class="w-8 h-8 text-[#ea999c]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        Habilidades
      </h2>
    </div>

    <div class="space-y-8">
      {portfolioData.skillCategories.map((category) => (
        <div class="bg-[#414559] border border-[#51576d] rounded-lg p-6">
          <h3 class="flex items-center gap-2 text-lg font-semibold text-[#c6d0f5] mb-4">
            <CategoryIcon icon={category.icon} />
            {category.name}
          </h3>
          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <span class="flex items-center gap-1.5 px-3 py-1 rounded-full text-sm border border-[#51576d] text-[#b5bfe2]">
                <TechIcon tech={portfolioData.techIcons[skill] || skill} />
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Experiencia en Industrias -->
    <div class="mt-8 bg-[#414559] border border-[#51576d] rounded-lg p-6">
      <h3 class="flex items-center gap-2 text-lg font-semibold text-[#c6d0f5] mb-4">
        <svg class="w-5 h-5 text-[#ea999c]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
        </svg>
        Experiencia en Industrias
      </h3>
      <div class="flex flex-wrap gap-2">
        {portfolioData.industries.map((industry) => (
          <span class="px-3 py-1 rounded-full text-sm border border-[#51576d] text-[#b5bfe2] bg-[rgba(65,69,89,0.3)]">
            {industry}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
