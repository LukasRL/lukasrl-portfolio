---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portafolio de Lukas Riveros - Desarrollador Front-End y Mobile" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Preconnect hints para dominios externos -->
    <link rel="preconnect" href="https://github.com">
    <link rel="preconnect" href="https://www.linkedin.com">
    
    <!-- CSS Crítico Inline -->
    <style>
      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        padding: 0;
        line-height: 1.6;
        background-color: #303446;
        color: #c6d0f5;
        font-family: system-ui, -apple-system, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Estilos críticos del header */
      .sticky {
        position: sticky;
        top: 0;
        z-index: 50;
      }

      .backdrop-blur {
        backdrop-filter: blur(8px);
      }

      /* Estilos críticos de layout */
      .flex {
        display: flex;
      }

      .items-center {
        align-items: center;
      }

      .justify-between {
        justify-content: space-between;
      }

      .max-w-6xl {
        max-width: 72rem;
      }

      .mx-auto {
        margin-left: auto;
        margin-right: auto;
      }

      .px-6 {
        padding-left: 1.5rem;
        padding-right: 1.5rem;
      }

      .h-16 {
        height: 4rem;
      }

      /* Scrollbar personalizada */
      ::-webkit-scrollbar {
        width: 8px;
      }

      ::-webkit-scrollbar-track {
        background: #292c3c;
      }

      ::-webkit-scrollbar-thumb {
        background: #51576d;
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #ea999c;
      }
    </style>

    <!-- Preload CSS no crítico -->
    <link rel="preload" href="/tech-icons.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="/global.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    
    <!-- Fallback para navegadores que no soportan preload -->
    <noscript>
      <link rel="stylesheet" href="/tech-icons.css" />
      <link rel="stylesheet" href="/global.css" />
    </noscript>

  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  /* Animaciones no críticas */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }

  .animate-pulse {
    animation: pulse 2s infinite;
  }
</style>
